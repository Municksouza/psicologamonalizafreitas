<div class="min-vh-100">
  <div class="row justify-content-center">
    <div class="container-login">
      <div class="form-login-patient text-center me-5 py-4">
        <h2 class="card-title-login text-center">Entrar</h2>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <!-- Campo de email com label -->
            <%= f.input :email, required: false, autofocus: true, input_html: { autocomplete: "email" }, label: "Email" %>

            <!-- Campo de senha com label -->
            <%= f.input :password, required: false, input_html: { autocomplete: "current-password" }, label: "Senha" %>

            <!-- Lembre-se de mim com label -->
            <%= f.input :remember_me, as: :boolean, label: "Lembre-se de mim" if devise_mapping.rememberable? %>
          </div>
          <div class="form-actions">
            <%= f.button :submit, "Entrar" %>
          </div>
        <% end %>
        <%= render "patients/shared/links" %>

        <!-- Adicionando as imagens dos vetores -->
        <div class="vector-bottom-right-login">
          <%= image_tag 'vector.png', alt: 'Vector Bottom Right', class: 'vector' %>
        </div>

        <div class="vector-top-left-login">
          <%= image_tag 'vector.png', alt: 'Vector Top Left', class: 'vector' %>
        </div>
      </div>
    </div>
  </div>
</div>
